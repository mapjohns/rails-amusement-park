<h1><%= @attraction.name %></h1>
<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
<% end %>

<h3>Ticket Cost: <%= @attraction.tickets %></h3>
<h3>Happy Boost: <%= @attraction.happiness_rating %></h3>
<h3>Ready to get sick? <%= @attraction.nausea_rating %></h3>
<h3>Gotta be tall for this ride: <%= @attraction.min_height %></h3><br>

<%= form_for @ride do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :attraction_id, :value => @attraction.id %>
    <%= f.submit "Go on this ride" %>
<% end %>
